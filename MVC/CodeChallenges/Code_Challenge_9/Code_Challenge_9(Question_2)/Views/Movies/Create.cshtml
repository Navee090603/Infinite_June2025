@model Code_Challenge_9_Question_2_.Models.Movie
@{
    ViewBag.Title = "Add Movie";
}
<h2>Add Movie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Moviename)
            @Html.EditorFor(m => m.Moviename)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DirectorName)
            @Html.EditorFor(m => m.DirectorName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateofRelease)
            @Html.EditorFor(m => m.DateofRelease)
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
<p>@Html.ActionLink("Back to List", "Index")</p>